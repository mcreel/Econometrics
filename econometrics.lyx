\begin_inset Formula
\begin{equation}
V(\hat{\beta}_{\mathbf{x}})=\frac{\sigma^{2}}{TSS_{\mathbf{x}}(1-R_{\mathbf{x}|W}^{2})}\label{eq:variance factors}
\end{equation}

