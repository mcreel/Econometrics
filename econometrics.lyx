\begin_inset Formula
\begin{equation}
s_{\infty}(\theta)=\int_{\mathcal{X}}\left\{ p(x,\theta_{0})\ln p(x,\theta)+\left[1-p(x,\theta_{0})\right]\ln\left[1-p(x,\theta)\right]\right\} \mu(x)dx,\label{QMLlimitingobjfun}
\end{equation}

\end_inset

