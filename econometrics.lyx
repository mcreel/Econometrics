0 & \begin{array}{ll}
\hat{Y}_{2} & X_{2}\end{array} &  & \vdots\\
\vdots &  & \ddots & 0\\
0 & \cdots & 0 & \begin{array}{ll}
\hat{Y}_{G} & X_{G}\end{array}
\end{array}\right]
\end{eqnarray*}

\end_inset


\end_layout

